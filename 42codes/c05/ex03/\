int	ft_recursive_power(int nb, int power)
{
	int	num;

	num = nb;
	if (num > num * nb)
		return (0);
	else if (power > 1)
		return (num * ft_recursive_power(num, power - 1));
	else if (power == 0)
		return (0);
	else if (power < 0)
		return (0);
	else
		return (n);
}
#include <stdio.h>
int main() {
	printf("%d",ft_recursive_power(2, 10));
}
